<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.se_team8.dongguk_usedbook_market.BookDetailsActivity">

    <!-- 홈 버튼 -->
    <Button
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:id="@+id/home_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onHomeButtonClicked"
        android:background="@drawable/home_button"/>

    <!-- 도서세부정보 페이지 -->
    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/book_details_page"
        android:background="@drawable/book_details_page"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/ivMpBookCover" />

    <!-- 삭제 버튼 -->
    <Button
        android:text="삭제"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:id="@+id/requestDelButton"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        android:onClick="onRequestDelBtnClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 목록 버튼 -->
    <Button
        android:text="목록"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listButton"
        android:layout_alignBaseline="@+id/requestDelButton"
        android:layout_alignBottom="@+id/requestDelButton"
        android:layout_toRightOf="@+id/requestDelButton"
        android:layout_toEndOf="@+id/requestDelButton"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:onClick="onListBtnClicked" />

    <!-- 도서 이미지 -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_marginTop="26dp"
        android:id="@+id/ivMpBookCover"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@+id/home_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 도서 제목 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivMpBookCover"
        android:id="@+id/tvMpBookTitle"
        android:paddingLeft="10dp"
        android:paddingBottom="1dp"
        android:maxLines="2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/ivMpBookCover"
        android:layout_toEndOf="@+id/ivMpBookCover"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

    <!-- 세부정보 -->
    <TableLayout
        android:id="@+id/bookDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/ivMpBookCover"
        android:layout_toEndOf="@+id/ivMpBookCover"
        android:layout_below="@+id/tvMpBookTitle"
        android:layout_alignBottom="@+id/ivMpBookCover">

        <TableRow>
            <TextView
                android:text="저자"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tvMpBookAuthor"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textSize="11sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="출판사"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tvMpBookPublisher"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textSize="11sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="출간일"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tvMpBookPubdate"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textSize="11sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="ISBN"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tvMpBookISBN"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textSize="11sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="정가"
                android:paddingTop="5dp"
                android:textSize="12sp"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/tvMpBookPrice"
                android:maxLines="1"
                android:textSize="14sp"
                android:paddingLeft="3dp"
                android:paddingTop="5dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="판매가"
                android:textSize="12sp"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/tvMpSellerPrice"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="normal|bold" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="판매자"
                android:textSize="12sp"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/tvMpSellerName"
                android:maxLines="1"
                android:paddingLeft="5dp"
                android:textSize="14sp"/>
        </TableRow>
    </TableLayout>

    <!-- 제품상태 -->
    <TableLayout
        android:id="@+id/bookStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:layout_below="@+id/ivMpBookCover"
        android:layout_alignLeft="@+id/ivMpBookCover"
        android:layout_alignStart="@+id/ivMpBookCover"
        android:layout_above="@+id/requestDelButton">
        <TableRow>
            <TextView
                android:text="제품상태"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="12sp"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/tvMpStatus"
                android:paddingTop="5dp"
                android:paddingLeft="7dp"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="13sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="과      목"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/tvMpCourse"
                android:paddingTop="5dp"
                android:paddingLeft="7dp"
                android:textSize="13sp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:text="교      수"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/tvMpProfessor"
                android:paddingTop="5dp"
                android:paddingLeft="7dp"
                android:textSize="13sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="상      세"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:id="@+id/tvMpMoreDetails"
                android:paddingTop="5dp"
                android:paddingLeft="7dp"
                android:textSize="13sp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>