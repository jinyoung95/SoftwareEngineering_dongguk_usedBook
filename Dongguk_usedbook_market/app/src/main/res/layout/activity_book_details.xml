<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.se_team8.dongguk_usedbook_market.BookDetailsActivity">

    <!-- 홈 버튼 -->
    <Button
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:id="@+id/home_button"
        android:background="@drawable/home_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onHomeButtonClicked" />

    <!-- 도서세부정보 페이지 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/book_details_page"
        android:id="@+id/book_details_page"
        android:gravity="center"
        android:layout_alignBottom="@+id/home_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 구매요청 버튼 -->
    <Button
        android:text="구매요청"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:id="@+id/requestButton"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        android:onClick="onRequestBtnClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 목록 버튼 -->
    <Button
        android:text="목록"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listButton"
        android:layout_alignBaseline="@+id/requestButton"
        android:layout_alignBottom="@+id/requestButton"
        android:layout_toRightOf="@+id/requestButton"
        android:layout_toEndOf="@+id/requestButton"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:onClick="onListBtnClicked" />

    <!-- 도서 이미지 -->
    <ImageView
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:background="@drawable/icon05"
        android:layout_marginTop="26dp"
        android:id="@+id/bookCover"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/home_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 도서 제목 -->
    <TextView
        android:text="컴퓨터시스템구조론"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bookCover"
        android:id="@+id/bookTitle"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/bookCover"
        android:layout_toEndOf="@+id/bookCover"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <!-- 세부정보 -->
    <TableLayout
        android:id="@+id/bookDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/bookCover"
        android:layout_toEndOf="@+id/bookCover"
        android:layout_below="@+id/bookTitle"
        android:layout_alignBottom="@+id/bookCover">

        <TableRow>
            <TextView
                android:text="저자"
                android:textSize="12sp" />
            <TextView
                android:text="Wiliam Stallings"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="출판사"
                android:textSize="12sp" />
            <TextView
                android:text="성진미디어"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="출간일"
                android:textSize="12sp" />
            <TextView
                android:text="2013.12.13"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="ISBN"
                android:textSize="12sp" />
            <TextView
                android:text="9788998308032"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="정가"
                android:paddingTop="10dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:text="36,000원"
                android:paddingLeft="5dp"
                android:paddingTop="10dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="판매가"
                android:paddingTop="5dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:text="10,000원"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="normal|bold" />
            </TableRow>
        <TableRow>
            <TextView
                android:text="판매자"
                android:paddingTop="5dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:text="문주원"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"/>
        </TableRow>
    </TableLayout>

    <!-- 제품상태 -->
    <TableLayout
        android:id="@+id/bookStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:layout_marginBottom="215dp"
        android:layout_below="@+id/bookCover"
        android:layout_alignLeft="@+id/bookCover"
        android:layout_alignStart="@+id/bookCover">
        <TableRow>
            <TextView
                android:text="제품상태"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:text="상태"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp" />
            <TextView
                android:text="보통"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="13sp" />
            <TextView
                android:text="외형"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp" />
            <TextView
                android:text="보통"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="13sp" />
            <TextView
                android:text="내형"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp" />
            <TextView
                android:text="보통"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="13sp" />
        </TableRow>
    </TableLayout>

    <!-- 과목, 교수 -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="195dp"
        android:layout_below="@+id/bookCover"
        android:layout_alignLeft="@+id/bookCover"
        android:layout_alignStart="@+id/bookCover">
        <TableRow>
            <TextView
                android:text="과목"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:text="컴퓨터구조"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp" />
            <TextView
                android:text="교수"
                android:paddingTop="5dp"
                android:paddingLeft="30dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:text="장태무 교수님"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp" />
        </TableRow>
    </TableLayout>

    <!-- 상세 -->
    <TableLayout
        android:id="@+id/bookMoreDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bookCover"
        android:layout_alignLeft="@+id/bookCover"
        android:layout_alignStart="@+id/bookCover"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:paddingRight="15dp"
        android:layout_above="@+id/requestButton">
        <TableRow>
            <TextView
                android:text="상세"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp"
                android:textStyle="normal|bold" />
            <TextView
                android:text="필기는 없지만 밑줄이 조금 많습니다\n책 자체는 깨끗합니다."
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:textSize="13sp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
