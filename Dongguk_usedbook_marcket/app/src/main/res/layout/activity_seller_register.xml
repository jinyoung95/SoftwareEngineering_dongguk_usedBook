<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_book_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp">

    <!-- 홈 버튼 -->
    <Button
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:id="@+id/home_button"
        android:background="@drawable/home_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onHomeButtonClicked" />

    <!-- 판매등록 버튼 -->
    <Button
        android:text="판매등록"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:id="@+id/registerButton"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:elevation="0dp"
        android:onClick="onRegistertBtnClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 목록 버튼 -->
    <Button
        android:text="목록"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registerListButton"
        android:layout_alignBaseline="@+id/registerButton"
        android:layout_alignBottom="@+id/registerButton"
        android:layout_toRightOf="@+id/registerButton"
        android:layout_toEndOf="@+id/registerButton"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:onClick="onRegListBtnClicked" />

    <!-- 도서세부정보 페이지 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/register_page"
        android:id="@+id/book_details_page"
        android:gravity="center"
        android:layout_alignBottom="@+id/home_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 도서 이미지 -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/icon05"
        android:layout_marginTop="26dp"
        android:id="@+id/bookCover"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_below="@+id/home_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 도서 제목 -->
    <TextView
        android:text="컴퓨터시스템구조론"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bookCover"
        android:id="@+id/bookTitle"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/bookCover"
        android:layout_toEndOf="@+id/bookCover"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:background="#EAEAEA" />

    <!-- 세부정보 -->
    <TableLayout
        android:id="@+id/bookDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@+id/bookCover"
        android:layout_toEndOf="@+id/bookCover"
        android:layout_below="@+id/bookTitle"
        android:layout_alignBottom="@+id/bookCover"
        android:background="#EAEAEA">

        <TableRow>
            <TextView
                android:text="저자"
                android:textSize="12sp" />
            <TextView
                android:text="Wiliam Stallings"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="출판사"
                android:textSize="12sp" />
            <TextView
                android:text="성진미디어"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="출간일"
                android:textSize="12sp" />
            <TextView
                android:text="2013.12.13"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="ISBN"
                android:textSize="12sp" />
            <TextView
                android:text="9788998308032"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="정가"
                android:textSize="12sp" />
            <TextView
                android:text="36,000원"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>
    </TableLayout>

    <!-- 판매 세부정보 -->
    <TableLayout
        android:id="@+id/registerDetails"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="5dp"
        android:layout_below="@+id/bookCover"
        android:layout_alignLeft="@+id/bookCover"
        android:layout_alignStart="@+id/bookCover"
        android:layout_alignRight="@+id/bookDetails"
        android:layout_alignEnd="@+id/bookDetails"
        android:layout_above="@+id/registerButton">

        <TableRow>
            <TextView
                android:id="@+id/sellerName"
                android:text="판매자"
                android:textStyle="normal|bold" />
            <TextView
                android:text="문주원"
                android:paddingLeft="10dp"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/sellerPrice"
                android:text="가격"
                android:textStyle="normal|bold" />
            <EditText
                android:id="@+id/editPrice"
                android:layout_width="230dp"
                android:inputType="textCapWords"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/status"
                android:paddingTop="7dp"
                android:text="상태"
                android:textStyle="normal|bold" />
            <RadioGroup
                android:id="@+id/statusButton"
                android:orientation="horizontal">
                <RadioButton
                    android:text="양호"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp"/>
                <RadioButton
                    android:text="보통"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="20dp" />
                <RadioButton
                    android:text="나쁨"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/course"
                android:text="과목"
                android:textStyle="normal|bold" />
            <EditText
                android:id="@+id/editCourse"
                android:layout_width="230dp"
                android:inputType="textCapWords"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/professor"
                android:text="교수"
                android:textStyle="normal|bold" />
            <EditText
                android:id="@+id/editProfessor"
                android:layout_width="230dp"
                android:inputType="textCapWords"/>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/moreDetails"
                android:text="상세"
                android:textStyle="normal|bold" />
            <EditText
                android:id="@+id/editMoreDetails"
                android:layout_width="300dp"
                android:singleLine="true"
                android:inputType="textCapWords"/>
        </TableRow>
    </TableLayout>


</RelativeLayout>