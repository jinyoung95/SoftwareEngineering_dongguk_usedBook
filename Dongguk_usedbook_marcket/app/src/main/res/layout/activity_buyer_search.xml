<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buyer_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.eomji.dongguk_usedbook_marcket.BuyerSearchActivity">

    <!--
    <com.example.eomji.dongguk_usedbook_marcket.BuyerSearchTitleButton
        android:id="@+id/titleBtn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="4dp"
        />
        -->
    <com.example.eomji.dongguk_usedbook_marcket.PreviousButton
        android:id="@+id/arrowLeftBtn"
        android:layout_width="32dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        />


    <!-- 검색어 입력 text-->
    <EditText
        android:id="@+id/searchText"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="21dp"
        android:inputType="textCapWords"
        android:hint="검색어를 입력하세요"
        android:singleLine="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/arrowLeftBtn"
        android:layout_toRightOf="@+id/arrowLeftBtn"
        android:layout_toEndOf="@+id/arrowLeftBtn" />

    <!-- 검색 버튼 -->
    <Button
        android:text="검색"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchButton"
        android:onClick="onSearchButtonClicked"
        android:layout_alignBaseline="@+id/searchText"
        android:layout_alignBottom="@+id/searchText"
        android:layout_toRightOf="@+id/searchText"
        android:layout_toEndOf="@+id/searchText" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/search_page"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/arrowLeftBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/searchText"
        android:gravity="center"/>

    <ListView
        android:id='@+id/listView2'
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/searchButton"
        android:layout_marginTop="27dp"
        android:layout_alignLeft="@+id/arrowLeftBtn"
        android:layout_alignStart="@+id/arrowLeftBtn" />


</RelativeLayout>
