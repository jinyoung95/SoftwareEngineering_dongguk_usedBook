<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.se_team8.dongguk_usedbook_market.HomeActivity">

    <Button
        android:id="@+id/saleRegisterButton"
        android:text="판매 등록"
        android:layout_width="300dp"
        android:elevation="0dp"
        android:onClick="onRegisterButtonClicked"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="14dp"
        android:layout_above="@+id/mypageButton"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/searchButton"
        android:text="도서 검색"
        android:layout_width="300dp"
        android:elevation="0dp"
        android:onClick="onSearchButtonClicked"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/saleRegisterButton"
        android:layout_alignStart="@+id/saleRegisterButton"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/mypageButton"
        android:text="마이페이지"
        android:layout_width="300dp"
        android:elevation="0dp"
        android:onClick="onMypageButtonClicked"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_above="@+id/logoutButton"
        android:layout_alignStart="@+id/saleRegisterButton"
        android:layout_marginBottom="11dp"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/homeImage"
        android:background="@drawable/home"
        android:layout_marginBottom="26dp"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:layout_above="@+id/searchButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/logoutButton"
        android:text="LOGOUT"
        android:layout_width="300dp"
        android:elevation="0dp"
        android:onClick="onLogoutButtonClicked"
        android:layout_marginBottom="108dp"
        android:background="@android:color/white"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mypageButton" />

</RelativeLayout>

