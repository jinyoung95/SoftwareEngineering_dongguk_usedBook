<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.se_team8.dongguk_usedbook_market.LoginActivity">


    <EditText
        android:id="@+id/userIdInput"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:inputType="text"
        android:hint="아이디"
        android:layout_width="300dp"
        android:layerType="software"
        android:textColorLink="@android:color/holo_blue_dark"
        android:layout_centerVertical="true"
        android:cursorVisible="true"
        android:layout_alignStart="@+id/userPwdInput"
        android:layout_alignEnd="@+id/userPwdInput"
        android:elevation="0dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="LOGIN"
        android:elevation="0dp"
        android:onClick="onLoginClicked"
        android:layout_marginTop="19dp"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/background_light"
        android:layerType="software"
        android:cursorVisible="false"
        android:layout_below="@+id/userPwdInput"
        android:layout_centerHorizontal="true" />

    <EditText
        android:inputType="textPassword"
        android:id="@+id/userPwdInput"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:hint="비밀번호"
        android:layout_marginTop="8dp"
        android:layerType="software"
        android:password="false"
        android:textColorLink="@android:color/holo_blue_bright"
        android:cursorVisible="true"
        android:layout_below="@+id/userIdInput"
        android:layout_alignStart="@+id/loginButton" />

    <ImageView
        android:id="@+id/lOGOImage"
        android:background="@drawable/logo2"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_above="@+id/userIdInput"
        android:layout_alignStart="@+id/userIdInput"
        android:layout_marginBottom="36dp" />

</RelativeLayout>
