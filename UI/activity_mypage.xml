<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mypage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.se_team8.dongguk_usedbook_market.MypageActivity">

    <ImageView
        android:id="@+id/mypageImage"
        android:background="@drawable/mypage"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/studentID"
        android:text="학번 | 2014112019"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/defaultProfileImage"
        android:layout_alignStart="@+id/studentName"
        android:background="#f1f1f1" />

    <ImageView
        android:id="@+id/defaultProfileImage"
        android:background="@drawable/defaultprofile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/mypageImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/studentName"
        android:layout_height="30dp"
        android:text="이름 | 김주현"
        android:layout_width="200dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/studentID"
        android:layout_alignStart="@+id/requestListButton"
        android:background="#f1f1f1" />

    <Button
        android:id="@+id/registerListButton"
        android:text="판매 등록 목록"
        android:elevation="0dp"
        android:onClick="onRegisterListButtonClicked"
        android:layout_width="200dp"
        android:background="@android:color/holo_blue_light"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/requestListButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/requestListButton"
        android:text="구매 요청 목록"
        android:elevation="0dp"
        android:onClick="onRequestListButtonClicked"
        android:layout_width="200dp"
        android:background="@android:color/holo_blue_light"
        android:layout_height="30dp"
        android:textColor="@android:color/white"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/studentName"
        android:layout_alignStart="@+id/registerListButton" />

</RelativeLayout>

